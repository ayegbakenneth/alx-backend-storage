// Connect to the MongoDB server
const conn = new Mongo();

const db = conn.getDB("my_db");

const dbExists = db.getMongo().getDBNames().includes("my_db");

if (dbExists) {
  print(`Database "my_db" already exists.`);
} else {
  // Create the "my_db" database
  db.createCollection("my_collection");
  print(`Database "my_db" created successfully.`);
}

db.useDatabase("my_db");
print(`Switched to database "my_db".`);
